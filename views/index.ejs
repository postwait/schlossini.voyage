<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/travel.css' />
    <script src="js/jquery-2.1.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry"></script>
    <script src="js/travelmap.js"></script>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>Schlossini travel journal</h1>
        <p>Follow our travels around the world.</p>
      </div>
    </div>
    <div class="frontcontainer container-fluid">
      <div class="row">
      <% var mdw = 12 / posts.length;
        for(var i=0; i<posts.length; i++) { %>
        <div class="col-md-<%- mdw %>">
          <a href="/traveler/<%- posts[i].person %><% if(dateparam) { %>/<%- dateparam %><% } %>"><div class="author_face">
          <div class="author_image"><img src="/images/profiles/<%= TP.profile_pic(posts[i].person)%>" /></div>
          </div></a>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="imgspacer"></div>
            <%- posts[i].content %>
          </div>
        </div>
      </div>
      <% } %>
      </div>
    </div>
    <%- include footer.ejs %>
  </body>
</html>
