<!DOCTYPE html>
<html>
  <head>
    <% include head %>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
          <a href="/traveler/<%- post.person %>"><div class="author_face">
          <div class="author_image"><img src="/images/profiles/<%= TP.profile_pic(post.date, post.person) %>" /></div>
        </div></a>
        <div class="imgspacer"></div>
        <h1><%= post.title %></h1>
        <div class="world"></div>
      </div>
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/traveler/<%- post.person %>"><%- post.person %></a></li>
        <li class="active">Post</li>
      </ol>
    </div>
    <div class="frontcontainer container-fluid single">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
        <div class="panel panel-default post">
          <div class="post-date"><span><%- post.date.format("dS &#111;&#102; mmmm, yyyy", true) %></span></div>
          <div class="panel-body">
            <%- post.content %>
          </div>
        </div>
        </div>
      </div>
    </div>
    <%- include footer.ejs %>
  </body>
</html>
