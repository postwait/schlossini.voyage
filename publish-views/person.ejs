<!DOCTYPE html>
<html>
  <% include head %>
  <body ng-app="tresbon" ng-controller="TBC">
  <div id="pagewrap">
    <div class="nonfooter">
    <div class="jumbotron">
      <div class="container">
          <div class="author_face">
          <div class="author_image"><img src="<%- person.author_face %>" /></div>
        </div>
        <div class="imgspacer"></div>
        <h1>Posts from <%= person.name %></h1>
        <%- person.meta %>
      </div>
      <div class="world"></div>
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active"><%= person.name %></li>
      </ol>
    </div>
    <div class="frontcontainer container-fluid">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
      <%
      for(var i=0; i<posts.length; i++) { %>
          <% (function(post) { %>
            <% include post %>
          <% })(posts[i]) %>
      <% } %>
          <div class="btn-group pagination" role="pagination">
            <% if(pageno > 1) { %>
            <a class="btn btn-default" role="button" href="?page=<%= (pageno-1) %>">see newer posts</a>
            <% } %>
            <% if(posts.length > pageno*nelem) { %>
            <a class="btn btn-default" role="button" href="?page=<%= (pageno+1) %>">see older posts</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    </div>
    <%- include footer.ejs %>
  </div>
  </body>
</html>
